{
  "version": 3,
  "configurePresets": [

    // Base:

    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/Build/${presetName}",
      "installDir": "${sourceDir}/Binary/${presetName}"
    },

    // Vcpkg:

    {
      "name": "vcpkg",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "STRING",
          "value": "$env{VCPKG_INSTALLATION_ROOT}/scripts/buildsystems/vcpkg.cmake"
        }
      }
    },

    // WSL Linux:

    {
      "name": "wsl-base",
      "hidden": true,
      "inherits": [ "base", "vcpkg" ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "vendor": { "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": { "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}" } }
    },
    {
      "name": "quartz-x64-wsl-debug",
      "displayName": "Quartz x64 - Debug (WSL)",
      "inherits": "wsl-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
    },
    {
      "name": "quartz-x64-wsl-release",
      "displayName": "Quartz x64 - Release (WSL)",
      "inherits": "wsl-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
    },
    {
      "name": "quartz-x86-wsl-debug",
      "displayName": "Quartz x86 - Debug (WSL)",
      "inherits": "wsl-base",
      "architecture": {
        "value": "x86",
        "strategy": "external"
      },
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
    },
    {
      "name": "quartz-x86-wsl-release",
      "displayName": "Quartz x86 - Release (WSL)",
      "inherits": "wsl-base",
      "architecture": {
        "value": "x86",
        "strategy": "external"
      },
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
    },

    // Windows:

    {
      "name": "windows-base",
      "hidden": true,
      "inherits": [ "base", "vcpkg" ],
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "quartz-x64-win-debug",
      "displayName": "Quartz x64 - Debug (Windows)",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
    },
    {
      "name": "quartz-x64-win-release",
      "displayName": "Quartz x64 - Release (Windows)",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
    },
    {
      "name": "quartz-x86-win-debug",
      "displayName": "Quartz x86 - Debug (Windows)",
      "inherits": "windows-base",
      "architecture": {
        "value": "x86",
        "strategy": "external"
      },
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
    },
    {
      "name": "quartz-x86-win-release",
      "displayName": "Quartz x86 - Release (Windows)",
      "inherits": "windows-base",
      "architecture": {
        "value": "x86",
        "strategy": "external"
      },
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
    }
  ]
}